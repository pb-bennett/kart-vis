{
  "global": {
    "PSID": {
      "label": "Point ID",
      "description": "Stable numeric identifier for the point/station",
      "type": "integer",
      "visible_by_default": true,
      "order": 1
    },
    "REF": {
      "label": "Reference",
      "description": "Textual reference or name (may be null)",
      "type": "string",
      "visible_by_default": true,
      "order": 2
    },
    "REFNO": {
      "label": "Reference number",
      "description": "Numeric reference number",
      "type": "integer",
      "visible_by_default": false,
      "order": 3
    },
    "STATION": {
      "label": "Station",
      "description": "Station / place name (may be null)",
      "type": "string",
      "visible_by_default": true,
      "order": 4
    },
    "DATEREG": {
      "label": "Registered",
      "description": "Date of registration",
      "type": "date",
      "display_format": "DD MMM YYYY",
      "visible_by_default": true,
      "order": 5
    },
    "DATECHANGE": {
      "label": "Last changed",
      "description": "Date of last change (nullable)",
      "type": "date",
      "display_format": "DD MMM YYYY",
      "visible_by_default": true,
      "order": 6
    },
    "MPNT_GUID": {
      "label": "GUID",
      "description": "Unique global identifier",
      "type": "string",
      "visible_by_default": false,
      "order": 99
    }
  },

  "prv_punkt": {
    "popup_fields": ["REF", "PSID", "DATEREG"],
    "display_order": ["REF", "PSID", "DATEREG", "DATECHANGE", "TYPE", "FCODE"],
    "TYPE": {
      "label": "Type",
      "description": "Type code",
      "type": "string",
      "visible_by_default": true,
      "order": 7
    },
    "FCODE": {
      "label": "Feature code",
      "description": "Feature classification code",
      "type": "string",
      "visible_by_default": false,
      "order": 8
    },
    "utm_x": {
      "label": "UTM X",
      "description": "UTM east coordinate (stored as attribute)",
      "type": "float",
      "unit": null,
      "visible_by_default": false,
      "order": 200
    },
    "utm_y": {
      "label": "UTM Y",
      "description": "UTM north coordinate (stored as attribute)",
      "type": "float",
      "unit": null,
      "visible_by_default": false,
      "order": 201
    }
  },

  "ult_punkt": {
    "popup_fields": ["REF", "PSID", "STATION", "Z"],
    "display_order": ["REF", "PSID", "STATION", "FUNC", "YEAR", "Z", "DATEREG"],
    "FUNC": {
      "label": "Function",
      "description": "Functional classification code",
      "type": "string",
      "visible_by_default": false,
      "order": 9
    },
    "YEAR": {
      "label": "Year",
      "description": "Year of installation or survey (0 if unknown)",
      "type": "integer",
      "visible_by_default": true,
      "order": 10
    },
    "Z": {
      "label": "Elevation",
      "description": "Elevation of the point (units: meters)",
      "type": "float",
      "unit": "m",
      "display_format": "0.00",
      "visible_by_default": true,
      "order": 11
    }
  },

  "utl_ledning": {
    "popup_fields": ["LSID", "MATERIAL", "DIM", "LENGTH"],
    "display_order": ["LSID", "FCODE", "MATERIAL", "DIM", "LENGTH", "DATEREG"],
    "LSID": {
      "label": "Line ID",
      "description": "Segment identifier",
      "type": "integer",
      "visible_by_default": true,
      "order": 1
    },
    "FCODE": {
      "label": "Feature code",
      "description": "Classification for the line segment",
      "type": "string",
      "visible_by_default": false,
      "order": 2
    },
    "FCODEGROUP": {
      "label": "Feature group",
      "description": "Higher-level group for FCODE (numeric)",
      "type": "integer",
      "visible_by_default": false,
      "order": 3
    },
    "MATERIAL": {
      "label": "Material",
      "description": "Material of the conduit (PVC, BET, PE, etc.)",
      "type": "string",
      "visible_by_default": true,
      "order": 4
    },
    "DIM": {
      "label": "Diameter",
      "description": "Nominal diameter (millimetres)",
      "type": "integer",
      "unit": "mm",
      "visible_by_default": true,
      "order": 5
    },
    "LENGTH": {
      "label": "Length",
      "description": "Segment length (meters)",
      "type": "float",
      "unit": "m",
      "display_format": "0.00",
      "visible_by_default": true,
      "order": 6
    }
  },

  "display_defaults": {
    "date_format": "DD MMM YYYY",
    "float_precision": 2,
    "fallback_label_format": "sentence_case"
  }
}
